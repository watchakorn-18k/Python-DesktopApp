    Button:
        text: "H"


<AnchorLayoutSample>:
    #anchor_x คือ right(ขวา), left(ซ้าย), center(กลาง)
    anchor_x: "center"
    #anchor_y คือ bottom(ล่าง), top(บน), center(กลาง)
    anchor_y: "top"
    BoxLayout:
        size_hint:.2,.2
        Button:
            text:"A"
        Button:
            text:"B"
        
        Button:
            text:"A"
        Button:
            text:"B"
        Button:
            text:"A"
        Button:
