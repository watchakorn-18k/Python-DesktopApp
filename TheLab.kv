<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint:1,None
        height:self.minimum_height




<StackLayoutExample>:
    #left-right top-bottom
    #orientation:"lr-bt"
    
    #left, top , right, bottom
    padding: ("40dp", "40dp","40dp","40dp")
    spacing:"20dp","20dp"



<GridLayoutExample@GridLayout>:
    #rows
    #cols
    rows:2
    #cols: 3
    Button:
        text: "A"
        size_hint:None,1
        weight:'80dp'
